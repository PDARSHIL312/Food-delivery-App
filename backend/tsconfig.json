{
  "compilerOptions": {
    "outDir": "./dist", // Output to the dist folder
    "rootDir": "./src", // Input comes from the src folder
    "esModuleInterop": true,
    "target": "ES6", // Set to ES6 for Node.js compatibility
    "module": "commonjs", // Use commonjs modules for Node.js
    "strict": true // Optional, but recommended for stricter type checking
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files under the src folder
  "exclude": ["node_modules"] // Exclude node_modules
}
